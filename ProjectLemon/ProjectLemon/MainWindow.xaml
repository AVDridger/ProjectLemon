<Window x:Class="ProjectLemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectLemon"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Title="MainWindow" Height="600" Width="800"
        WindowState="Maximized"        
        >
    <Grid>
        <DataGrid AutoGenerateColumns="False" ColumnWidth="*" x:Name="authTable" Margin="192.5,246,139,119.5">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding request_id}" Header="requestId"/>
                <DataGridTextColumn Binding="{Binding parent_id}" Header="parentId"/>
                <DataGridTextColumn Binding="{Binding status_id}" Header="statusId"/>
                <DataGridTextColumn Binding="{Binding desc}" Header="desc"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
